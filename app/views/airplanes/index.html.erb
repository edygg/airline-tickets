<div class="col-md-6 col-md-offset-3">
  <h1>Listing airplanes</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Model</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @airplanes.each do |airplane| %>
        <tr>
          <td><%= airplane.airplane_model %></td>
          <td><%= link_to 'Edit', edit_airplane_path(airplane), class: 'btn btn-sm btn-info' %></td>
          <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Airplane', new_airplane_path, class: 'btn btn-success' %>
</div>
