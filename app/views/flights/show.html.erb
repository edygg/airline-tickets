<div class="col-md-8 col-md-offset-2">
  <h1>Schedules</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Departure time</th>
        <th>Arrival time</th>
        <th>Time</th>
        <th>Departure City</th>
        <th>Arrival City</th>
        <th>Airplane</th>
        <th>Price</th>
        <th>Class Type</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @Schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.departure_time.strftime("%I:%M%p") %></td>
          <td><%= schedule.arrival_time.strftime("%I:%M%p") %></td>
          <td><%= ((schedule.arrival_time - schedule.departure_time)/60).round %></td>
          <td><%= City.find_by_id(schedule.departure_city_id).name %></td>
          <td><%= City.find_by_id(schedule.arrival_city_id).name %></td>
          <td><%= Airplane.find_by_id(schedule.airplane_id).airplane_model %></td>
          <td>$<%= schedule.price %></td>
          <td><%= ClassType.find_by_id(@classTypeId['class_type']).name %></td>
          <td><%= link_to 'Buy', buy_tickets_path(schedule)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
</div>