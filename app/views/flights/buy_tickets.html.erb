<h1><center>Selected flight</center></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Departure time</th>
        <th>Arrival time</th>
        <th>Time</th>
        <th>Departure City</th>
        <th>Arrival City</th>
        <th>Airplane</th>
        <th>Name</th>
        <th>Nationality</th>
        <th>Credit Card</th>
        <th>Exp Credit Card</th>
        <th>Emil</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <td><%= @scheduleToBuy.departure_time.strftime("%I:%M%p") %></td>
          <td><%= @scheduleToBuy.arrival_time.strftime("%I:%M%p") %></td>
          <td><%= ((@scheduleToBuy.arrival_time - @scheduleToBuy.departure_time)/60).round %></td>
          <td><%= City.find_by_id(@scheduleToBuy.departure_city_id).name %></td>
          <td><%= City.find_by_id(@scheduleToBuy.arrival_city_id).name %></td>
          <td><%= Airplane.find_by_id(@scheduleToBuy.airplane_id).airplane_model %></td>
          <td>$<%= @scheduleToBuy.price %></td>
          <% if client_signed_in? %>
          	<td><%= current_client.first_name %> 
                <%= current_client.middle_name %> 
          	    <%= current_client.last_name %> </td> 
          	<td><%= current_client.nationality %> </td>
            <td><%= current_client.credit_card %> </td>
            <td><%= current_client.exp_credit_card %> </td>
            <td><%= current_client.email %> </td>
          <% end %>
    </tbody>
  </table>