<div class="col-md-6 col-md-offset-3">
  <h1>Listing class_types</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rate</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @class_types.each do |class_type| %>
        <tr>
          <td><%= class_type.name %></td>
          <td><%= class_type.rate %>%</td>
          <td><%= link_to 'Edit', edit_class_type_path(class_type), class: 'btn btn-sm btn-info' %></td>
          <td><%= link_to 'Destroy', class_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Class type', new_class_type_path, class: 'btn btn-success'  %>
</div>

