<h1>Listing schedules</h1>

<table>
  <thead>
    <tr>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Departure City</th>
      <th>Arrival City</th>
      <th>Airplane</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.departure_time %></td>
        <td><%= schedule.arrival_time %></td>
        <td><%= City.find_by_id(schedule.departure_city_id).name %></td>
        <td><%= City.find_by_id(schedule.arrival_city_id).name %></td>
        <td><%= schedule.airplane_id %></td>
        <td><%= schedule.price %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

