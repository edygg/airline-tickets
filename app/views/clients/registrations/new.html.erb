<div class="col-md-6 col-md-offset-3">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :first_name, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :middle_name, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :middle_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :birthday, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.date_field :birthday, autofocus: true, class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
      <%= f.label :passport_number, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :passport_number, autofocus: true, class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
      <%= f.label :credit_card, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :credit_card, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :exp_credit_card, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= f.date_field :exp_credit_card, autofocus: true, class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
       <%= f.label :nationality, class: 'control-label col-sm-4' %>
       <div class="col-sm-8">
         <%= f.select :nationality, options_for_select([ "Afganistán", "Albania", "Alemania",
