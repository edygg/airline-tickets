<div class="col-md-6 col-md-offset-3">
  <h1>Listing categories</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rate</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.rate %>%</td>
          <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
</div>

